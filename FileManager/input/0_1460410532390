    });
    Modernizr.addTest('flash', function() {
        // Flash test taken from SWFObject (MIT license)
        var activexFlash, version;
        try {
            if ('ActiveXObject' in window) {
                activexFlash = new window.ActiveXObject('ShockwaveFlash.ShockwaveFlash')
            }
        } catch(e) {}
        if (activexFlash && 'Pan' in activexFlash) {
            version = activexFlash.GetVariable("$version").split(" ")[1].split(",");
            version = parseInt(version[0], 10);
        } else if ('plugins' in navigator && 'Shockwave Flash' in navigator.plugins) {
            version = navigator.plugins['Shockwave Flash'].description.replace(/^.*\s+(\S+\s+\S+$)/, "$1");
            version = parseInt(version.replace(/^(.*)\..*$/, "$1"), 10)
        } else {
            version = 0;
        }
        return version >= 12;
    });
    Modernizr.addTest('notiphone', function() {
         return navigator.userAgent.indexOf('iPhone') === -1 && navigator.userAgent.indexOf('iPod') === -1;
    });
</script>


