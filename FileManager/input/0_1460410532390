        // Flash test taken from Modernizr 3.0 beta (MIT license)
        var activex;
        try {
            activex = 'ActiveXObject' in window && 'Pan' in new window.ActiveXObject('ShockwaveFlash.ShockwaveFlash');
        } catch(e) {}
